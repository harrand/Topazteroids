resources: ../../../res/runtime/resources.mdl
default_world: ../../../res/runtime/worlds/default_world.mdl
default_shader: ../../../res/runtime/shaders/asteroids
default_gui_shader: ../../../res/runtime/shaders/gui
music_path: ../../../res/runtime/music/asteroids.wav
# Initial speed of ship
initial_speed: 2
# Recovery period length in milliseconds (time invincible after impact)
recovery_period: 5000
# Shoot delay length in milliseconds (minimum time between each shot)
shot_period: 500
# Size of the field in which an asteroid can spawn, decreases difficulty
asteroid_dispersion: 500
# Maximum random force applied to an asteroid, decreases difficulty
asteroid_max_speed: 1000
# Asteroid Max Size increment per level.
asteroid_size: 75
# Multiplier to the chase component of asteroid force, HUGELY increases difficulty
asteroid_chase_multiplier: 25
# Speed increase percentage
speed_increase: 10
# Key to shoot a shot
shoot_keybind: F
# Size of a shot projectile
shot_size: 30
# Speed of a shot projectile
shot_speed: 50000
# Testing purposes - spawns powerup at your location
dev_powerup_keybind: P
# Probability of an asteroid spawning per tick
asteroid_probability_tick: 5
# Probability of a powerup spawning per tick
powerup_probability_tick: 1
